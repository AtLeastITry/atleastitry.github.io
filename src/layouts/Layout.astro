---
import { Image } from "astro:assets";
import TypeWriter from "../components/type-writer";
import ContactForm from "../components/contact-form";
import { NavMenu } from "../components/nav-menu";
import '../styles/global.css'

interface Props {
  title: string;
  header?: string;
  typeWriterText?: string;
  typeWriterSuffix?: string[];
}

const { title, header, typeWriterSuffix, typeWriterText } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/orestbida/cookieconsent@v2.9.2/dist/cookieconsent.css"
    />
    <title>{title}</title>
  </head>
  <body class="font-mono min-h-screen bg-indigo-950/95 text-white">
    <script
      defer
      src="https://cdn.jsdelivr.net/gh/orestbida/cookieconsent@v2.9.2/dist/cookieconsent.js"
    ></script>
    <main>
      <header class="sticky top-0 z-50 backdrop-blur supports-[backdrop-filter]:bg-indigo-950/60 bg-indigo-950/80 border-b border-white/10 px-6 py-4 xl:px-20">
        <nav class="grid w-full grid-cols-2 xl:grid-cols-3 items-center">
          <span class="xl:col-span-2 py-2">
            <a
              href="/"
              class="bg-white rounded-lg px-4 py-2 text-indigo-950 hover:bg-indigo-400 hover:text-white"
              >matt-h.dev</a
            >
          </span>
          <NavMenu client:load />
        </nav>
      </header>
      <div
        class="block bg-indigo-950 px-10 pb-20 pt-10 xl:px-56 xl:pb-64 xl:pt-40"
      >
        <h1 class="text-3xl text-white xl:text-6xl break-words">&lt;{header}/&gt;</h1>
        <hr class="my-2 border-2 xl:my-6" />
        <TypeWriter
          text={typeWriterText}
          textSuffix={typeWriterSuffix}
          client:load
        />
      </div>
      <slot />
    </main>
    <footer>
      <h3 class="block bg-indigo-950 px-10 py-10 text-2xl text-white xl:px-20">
        &lt;Contact me!/&gt;
      </h3>
      <div
        class="bg-secondary-500 grid grid-cols-1 place-items-center p-6 xl:px-20"
      >
        <ContactForm client:visible />
      </div>
      <div class="block bg-indigo-950 px-10 md:px-20 py-10 text-3xl text-white">
        <a href="https://www.codementor.io/@atleastitry?refer=badge">
          <img
            class="inline h-8 w-auto"
            src="https://www.codementor.io/m-badges/atleastitry/im-a-cm-g.svg"
            alt="Codementor badge"
            loading="lazy"
            decoding="async"
          />
        </a>
        <a class="ml-5" href="https://github.com/AtLeastITry" target="_blank">
          <i class="devicon-github-original hover:text-indigo-400"></i>
        </a>
        <a
          class="ml-5"
          href="https://www.linkedin.com/in/matt-hope/"
          target="_blank"
        >
          <i class="devicon-linkedin-plain hover:text-indigo-400"></i>
        </a>
      </div>
    </footer>
  </body>
</html>
