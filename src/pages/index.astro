---
import Layout from "../layouts/Layout.astro";
import Projects from "../components/projects";

const projects = [
  {
    title: "Sourcey",
    description:
      "Event sourcing library with built-in aggregate and projection support",
    url: "https://sourceyorg.github.io/",
  },
  {
    title: "Hostly",
    description: "Net core style host for Xamarin apps",
    url: "https://github.com/hostly-org/hostly",
  },
  {
    title: "Sound it out",
    description: "Audio book portal",
    url: "https://github.com/sound-it-out",
  },
  {
    title: "Clipboard",
    description: "Document text extractor",
    url: "https://github.com/clipboard-org/clipboard",
  },
  {
    title: "Chatbot",
    description: "ML based chatbot",
    url: "https://github.com/AtLeastITry/seq2seq-keras-chatBot",
  },
  {
    title: "APC",
    description: "Python compiler built with antlr",
    url: "https://github.com/AtLeastITry/antlr-python-compiler",
  },
];
---

<Layout
  title="Matt Hope"
  header="Hi, It's Matt!"
  typeWriterText="I'm a "
  typeWriterSuffix={[
    "Tech lead...",
    "Software developer...",
    "Mentor...",
    "Coding enthusiast...",
  ]}
>
  <section class="relative px-6 py-16 xl:px-40">
    <div class="mx-auto max-w-8xl rounded-lg border border-white/10 bg-indigo-950/60 p-8 shadow-2xl backdrop-blur">
      <h2 class="pb-6 text-3xl">&lt;About me/&gt;</h2>
      <p class="text-white/90 leading-relaxed">
        I'm a professional tech lead with over a decade of software development experience, focusing on innovation and leveraging current technologies to build large‑scale enterprise applications. In‑depth experience in requirements gathering, sprint planning, development, design, maintenance, and testing. Broad expertise across platforms, frameworks, and tooling — with a proven ability to lead teams collaboratively and deliver on schedule.
      </p>
    </div>
  </section>

  <section id="portfolio" class="block bg-indigo-950 px-10 py-10 text-2xl text-white xl:px-20">
    <h3>&lt;Portfolio/&gt;</h3>
  </section>
  <Projects projects={projects} client:visible />
</Layout>
